<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

	<Script file="CloudyTooltipMod.lua"/>

	<Frame name="CTipMod" parent="UIParent">
		<Scripts>
			<OnLoad>
				CTipMod_OnLoad(self)
			</OnLoad>

			<OnEvent>
				CTipMod_OnEvent(self, event, ...)
			</OnEvent>
		</Scripts>
	</Frame>

	<Frame name="CTipModUI" parent="InterfaceOptionsFramePanelContainer">
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentTitle" inherits="GameFontNormalLarge" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="16" y="-16" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>

				<FontString name="$parentSubText" inherits="GameFontHighlightSmall" justifyH="LEFT" justifyV="TOP">
					<Size>
						<AbsDimension x="0" y="24"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="0" y="-8"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Frames>
			<Frame>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentAnchor" text="Tooltip Anchor" inherits="GameFontNormal">
							<Size>
								<AbsDimension x="0" y="24"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="$parentSubText" relativePoint="BOTTOMLEFT">
									<Offset>
										<AbsDimension x="0" y="-8"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>

			<CheckButton name="$parent_MouseAnchor" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentAnchor" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</CheckButton>

			<Frame>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentStyle" text="Tooltip Style" inherits="GameFontNormal">
							<Size>
								<AbsDimension x="0" y="24"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="$parent_MouseAnchor" relativePoint="BOTTOMLEFT">
									<Offset>
										<AbsDimension x="0" y="-8"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>

			<CheckButton name="$parent_TipColor" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentStyle" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</CheckButton>

			<CheckButton name="$parent_ClassColor" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_TipColor" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</CheckButton>

			<CheckButton name="$parent_HideHealth" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_ClassColor" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</CheckButton>

			<CheckButton name="$parent_HideBorder" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_HideHealth" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</CheckButton>

			<CheckButton name="$parent_HidePVP" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_HideBorder" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</CheckButton>

			<Frame>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentScale" text="Tooltip Scale" inherits="GameFontNormal">
							<Size>
								<AbsDimension x="0" y="24"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="$parent_HidePVP" relativePoint="BOTTOMLEFT">
									<Offset>
										<AbsDimension x="0" y="-8"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>

			<Slider name="$parent_TipScale" inherits="OptionsSliderTemplate" minValue="0.5" maxValue="1.5" defaultValue="1.0" valueStep="0.05">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentScale" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="8" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Low:Hide()
						self.High:ClearAllPoints()
						self.High:SetPoint("LEFT", self, "RIGHT", 3, 2)
					</OnLoad>
					<OnValueChanged>
						self.High:SetFormattedText(PERCENTAGE_STRING, math.floor(value * 100))
					</OnValueChanged>
				</Scripts>
			</Slider>

			<Frame>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentDetail" text="Tooltip Detail" inherits="GameFontNormal">
							<Size>
								<AbsDimension x="0" y="24"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="$parentSubText" relativePoint="BOTTOMLEFT">
									<Offset>
										<AbsDimension x="300" y="-8"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>

			<CheckButton name="$parent_UnitTitle" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentDetail" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</CheckButton>

			<CheckButton name="$parent_UnitGender" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_UnitTitle" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</CheckButton>

			<CheckButton name="$parent_UnitStatus" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_UnitGender" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</CheckButton>

			<CheckButton name="$parent_UnitRealm" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_UnitStatus" relativePoint="BOTTOMLEFT" />
				</Anchors>
				<Scripts>
					<OnUpdate>
						if self:GetChecked() then
							CTipModUI_RealmLabel:Enable()
							CTipModUI_RealmLabel:SetAlpha(1.0)
						else
							CTipModUI_RealmLabel:Disable()
							CTipModUI_RealmLabel:SetAlpha(0.5)
						end
					</OnUpdate>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parent_RealmLabel" inherits="InterfaceOptionsSmallCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_UnitRealm" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="10" y="4"/>
						</Offset>
					</Anchor>
				</Anchors>
			</CheckButton>

			<CheckButton name="$parent_GuildRank" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_RealmLabel" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="-10" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</CheckButton>

			<Frame>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentInfo" text="Tooltip Info" inherits="GameFontNormal">
							<Size>
								<AbsDimension x="0" y="24"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="$parent_GuildRank" relativePoint="BOTTOMLEFT">
									<Offset>
										<AbsDimension x="0" y="-8"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>

			<CheckButton name="$parent_TargetOfTarget" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentInfo" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</CheckButton>

			<CheckButton name="$parent_TradeGoodsInfo" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_TargetOfTarget" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</CheckButton>

			<CheckButton name="$parent_FactionIcon" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_TradeGoodsInfo" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</CheckButton>

			<CheckButton name="$parent_LinkIcon" inherits="InterfaceOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_FactionIcon" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</CheckButton>
		</Frames>

		<Scripts>
			<OnLoad>
				CTipModUI_OnLoad(self)
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>
